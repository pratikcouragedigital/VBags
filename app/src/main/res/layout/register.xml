<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:id="@+id/logo"
                        android:src="@drawable/vbags_text"/>

                    <LinearLayout
                        android:id="@+id/relativeLayoutForLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtLayoutFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardTheme"
                            card_view:cardElevation="@dimen/_10sdp">

                            <EditText
                                android:textColor="@color/white"
                                android:id="@+id/txtFirstName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter First Name "
                                android:inputType="text"
                                android:textSize="@dimen/_14sdp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtLayoutLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardTheme">

                            <EditText
                                android:textColor="@color/white"
                                android:id="@+id/txtLastName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Last Name "
                                android:inputType="text"
                                android:textSize="@dimen/_14sdp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtLayoutPhoneNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardTheme">

                            <EditText
                                android:id="@+id/txtMobileNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Mobile No"
                                android:textColor="@color/white"
                                android:inputType="number"
                                android:textSize="@dimen/_14sdp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtLayoutEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardTheme">

                            <EditText
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                android:textColor="@color/white"
                                android:inputType="textEmailAddress"
                                android:textSize="@dimen/_14sdp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtLayoutPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardTheme">

                            <EditText
                                android:id="@+id/txtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Password"
                                android:textColor="@color/white"
                                android:inputType="textPassword"
                                android:textSize="@dimen/_14sdp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtLayoutConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardTheme">

                            <EditText
                                android:id="@+id/txtConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Confirm Password"
                                android:textColor="@color/white"
                                android:inputType="textPassword"
                                android:textSize="@dimen/_14sdp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ripple_coloraccent_bg"
                android:text="Register"
                android:layout_margin="@dimen/_2sdp"
                android:textColor="@color/orange500" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

